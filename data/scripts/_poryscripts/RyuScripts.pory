script RS_HGM01 {
	getpartysize
	copyvar(VAR_TEMP_E, VAR_RESULT)
	setvar(VAR_TEMP_D,  SPECIES_XERNEAS)
	bufferdynamicmulti(HGM01_Nature1, HGM01_Nature2)
	multichoice(0, 5, MULTI_DYNAMIC_2, 1)
	if (var(VAR_RESULT) == 0) {
		setvar(VAR_TEMP_C, NATURE_ADAMANT)
	}
	else {
		setvar(VAR_TEMP_C, NATURE_MODEST)
	}
	callnative(RyuGiveHolidayModdedMon)
	bufferspeciesname(0, SPECIES_XERNEAS)
	goto(RS_HolidayOutro)
}

