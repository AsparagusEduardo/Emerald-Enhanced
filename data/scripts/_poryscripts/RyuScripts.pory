script RyuScript_EncounterBuzzwole {
	msgbox("A mysterious Bug Pok√©mon attacks!", MSGBOX_ONELINE)
	setvar(VAR_TEMP_5, SPECIES_BUZZWOLE)
	call(RyuLegendary_GeneralLegendEncounter)
	specialvar(VAR_RESULT, GetBattleOutcome)
	if (var(VAR_RESULT) == B_OUTCOME_CAUGHT) {
		setflag(FLAG_RYU_BUZZWOLE_CAUGHT)
		call(RyuCheckIfAllBeastsCaught)
	}
	setflag(FLAG_RYU_PAUSE_UB_ENCOUNTER)
	clearflag(FLAG_RYU_ENCOUNTERED_UB)
	release
	end
}

