script RyuCheckIfAllBeastsCaught {
	goto_if_set(FLAG_RYU_CAUGHT_ALL_UBS, ryu_return)
	goto_if_unset(FLAG_RYU_NIHILEGO_CAUGHT, ryu_return)
	goto_if_unset(FLAG_RYU_BUZZWOLE_CAUGHT, ryu_return)
	goto_if_unset(FLAG_RYU_PHEROMOSA_CAUGHT, ryu_return)
	goto_if_unset(FLAG_RYU_XURKITREE_CAUGHT, ryu_return)
	goto_if_unset(FLAG_RYU_CELESTEELA_CAUGHT, ryu_return)
	goto_if_unset(FLAG_RYU_KARTANA_CAUGHT, ryu_return)
	goto_if_unset(FLAG_RYU_GUZZLORD_CAUGHT, ryu_return)
	goto_if_unset(FLAG_RYU_STAKATAKA_CAUGHT, ryu_return)
	setflag(FLAG_RYU_CAUGHT_ALL_UBS)
	ach(give, ACH_ULTRA_BEASTLY)
	return
}

